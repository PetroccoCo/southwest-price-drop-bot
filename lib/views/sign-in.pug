extends layout.pug

include mixins/form-css.pug

block content
  +form-css
  style.
    p.error {
      color: #d5152e;
    }
    .buttons {
      margin-bottom: 40px;
    }


  h3 Sign in

  if error
    p.error Oops, wrong password!

  form(method='post')
    div.field
      label(for='user') User
      input(
        id='user'
        name='user'
        autocomplete='off'
        autocorrect='off'
        autocapitalize='off'
        spellcheck='false'
        required
        value=(auth.user || '')
      )
      span.help Enter any username to log in. Note that you'll need to remember this username to view your alerts.

    div.field
      label(for='password') Password
      input(
        id='password'
        name='password'
        type='password'
        required
      )
      span.help Enter the site password. See website owner if you don't know it.


    div.field
      div.buttons
        button.button(type='submit') Sign in
